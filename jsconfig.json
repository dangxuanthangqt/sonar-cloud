{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@/common/*": ["./common/*"],
      "@/components/*": ["./components/*"],
      "@/utils/*": ["./common/utils/*"],
      "@/layouts/*": ["./layouts/*"],
      "@/modules/*": ["./modules/*"],
      "@/pages/*": ["./pages/*"],
      "@/routes/*": ["./routes/*"],
      "@/assets/*": ["./assets/*"],
      "@/recoil/*": ["./recoil/*"]
    },
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": ["src"]
}
